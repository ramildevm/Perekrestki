<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motion_layout4_2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="380dp"
    android:background="@drawable/scene4_1_back"
    app:layoutDescription="@xml/scene4_2_scene">

    <ImageView
        android:id="@+id/backimg"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:src="@drawable/scene4_2_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/train"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:rotation="-44.3"
        android:src="@drawable/train"
        android:translationY="-165dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent" />

    <ImageView
        android:id="@+id/topcar"
        android:layout_width="90dp"
        android:layout_height="54dp"
        android:rotation="50"
        android:src="@drawable/carg_left_to_forward"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.134" />

    <ImageView
        android:id="@+id/bottomcar"
        android:layout_width="90dp"
        android:layout_height="54dp"
        android:layout_marginBottom="48dp"
        android:rotation="-130"
        android:src="@drawable/carr_left_to_forward"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.motion.widget.MotionLayout>
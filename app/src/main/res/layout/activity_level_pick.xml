<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#513215"
    tools:context=".LevelPickActivity">

    <Button
        android:id="@+id/go_back_btn"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/go_back_img"
        android:onClick="goMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/go_back_btn"
        app:layout_constraintTop_toTopOf="@+id/go_back_btn"
        android:fontFamily="@font/arima_madurai"
        android:text="Выбор уровня"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_border_layout"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/lvl1_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:background="@drawable/rounded_border"
                android:onClick="goLvl"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <Button
                android:id="@+id/lvl2_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_border"
                android:onClick="goLvl"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <Button
                android:id="@+id/lvl3_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:background="@drawable/rounded_border"
                android:onClick="goLvl"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/lvl4_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:background="@drawable/rounded_border"
                android:onClick="goLvl"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <Button
                android:id="@+id/lvl5_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_border"
                android:onClick="goLvl"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <Button
                android:id="@+id/lvl6_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:background="@drawable/rounded_border"
                android:onClick="goLvl"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/lvl7_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:background="@drawable/rounded_border"
                android:onClick="goLvl"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <Button
                android:id="@+id/lvl8_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_border"
                android:onClick="goLvl"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <Button
                android:id="@+id/lvl9_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:background="@drawable/rounded_border"
                android:onClick="goLvl"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/lvl10_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:background="@drawable/rounded_border"
                android:onClick="goLvl"
                android:text="10"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <Button
                android:id="@+id/lvl11_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_border"
                android:onClick="goLvl"
                android:text="11"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <Button
                android:id="@+id/lvl12_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:background="@drawable/rounded_border"
                android:onClick="goLvl"
                android:text="12"
                android:textColor="@color/black"
                android:textSize="24dp" />
        </LinearLayout>

        <Button
            android:id="@+id/map_button"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_border_complete_y"
            android:onClick="goLvl"
            android:text="@string/button_map"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/infinity_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:text="Бесконечный режим"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/black"
        android:background="@drawable/rounded_border_light"
        android:onClick="goLevel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>